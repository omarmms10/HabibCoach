<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HabibCoach</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">




    <style>
        /* Sidebar styling */
        #sidebar {
            width: 250px;
            background-color: #1f1f1f; /* Dark background */
            color: #a3a3a3;
            height: 100vh;
            position: fixed;
        }

        /* Sidebar header styling for centered logo */
.sidebar-header {
    padding: 20px;
    display: flex;
    flex-direction:column;
    align-items: center;
    background-color: #1f1f1f; /* Keep it consistent with the sidebar */
}

/* Logo image with lighting effect */
.sidebar-header .logo-img {
    width: 80px; /* Adjust size as necessary */
    height: auto;
    animation: lampEffect 2s infinite alternate; /* Apply the animation */
}
        /* Search bar container styling */
        .search-container {
            position: relative;
            width: 100%;
            margin-top: 5px;
        }

        /* Search input styling */
        #sidebarSearch {
            background-color: #333333; /* Dark background for input */
            color: white;
            border: 1px solid #444444;
            border-radius: 6px;
            padding: 10px 40px 10px 30px; /* Add padding for the icon */
            width: 100%;
            font-size: 0.9rem;
        }

        /* Search icon styling */
        .search-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #a3a3a3; /* Light gray color */
            font-size: 1rem;
        }

        /* Placeholder text styling for better readability */
        #sidebarSearch::placeholder {
            color: #a3a3a3; /* Matches the icon color */
            font-size: 0.9rem;
        }

        /* Styling for search results */
        .search-results {
            display: none; /* Initially hidden */
            background-color: #2b2b2b;
            color: #a3a3a3;
            border-radius: 5px;
            overflow: hidden;
            max-height: 300px;
            width: 90%;
            margin: 0 auto;
        }

            .search-results p {
                padding: 10px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .search-results p:hover {
                    background-color: #3c3c3c;
                }

            .search-results .no-results {
                color: #ff6666;
                font-size: 0.9rem;
                text-align: center;
                padding: 10px;
            }


/* Keyframes for lighting effect */
@@keyframes lampEffect {
    0% {
        filter: brightness(50%) drop-shadow(0px 0px 5px #ffffff33);
        transform: scale(1);
    }
    100% {
        filter: brightness(200%) drop-shadow(0px 0px 15px #ffffffaa);
        transform: scale(1.1); /* Slight scaling for extra effect */
    }
}

      /*   #sidebar .sidebar-header {
            padding: 20px;
            font-size: 1.25rem;
            font-weight: bold;
            color: white;
        } */

        #sidebar ul li a {
            color: #a3a3a3;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
            font-size: 0.9rem;
        }

        #sidebar ul li a i {
            margin-right: 10px;
        }

        #sidebar ul li a:hover, 
        #sidebar ul li.active a {
            color: white;
            background-color: #333333; /* Highlight color */
            border-radius: 4px;
        }

       /* Sidebar footer styling */
.sidebar-footer {
    padding: 15px 20px;
    color: white;
    font-size: 0.9rem;
    border-top: 1px solid #444;
}

/* Profile image styling */
.profile-img {
    border-radius: 50%;
    width: 36px; /* Adjusted to match the example size */
    height: 36px;
    border: 2px solid #ffffff33;
}

/* User name styling */
.user-name {
    color: #ffffff;
    font-size: 0.9rem;
    margin-left: 10px;
}

/* Logout icon styling */
.logout-icon i {
    font-size: 1.2rem; /* Adjust size of the icon */
    color: #ffffff;
    padding-left: 10px;
    cursor: pointer;
}

/* Alignment adjustments for small screens */
@@media (max-width: 768px) {
    .sidebar-footer {
        text-align: center;
        flex-direction: column;
    }
    .logout-icon {
        margin-top: 10px;
    }
}

        .user-profile {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

        .user-profile img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            border: 2px solid #ffffff33;
        }

        .user-profile span {
            margin-left: 10px;
        }

        @@media (max-width: 768px) {
            #sidebar {
                width: 100%;
                position: absolute;
                z-index: 1000;
                height: auto;
            }
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="vh-100">
            <div class="sidebar-header text-center">
                <img src="Uploads/profile_pictures/habibLogo.png" alt="Coach Logo" class="logo-img mb-3">
                <div class="search-container">
                    <input type="text" id="sidebarSearch" class="form-control" placeholder="Search">
                    <i class="bi bi-search search-icon"></i> <!-- Bootstrap Icons search icon -->
                </div>
            </div>



            <ul class="list-unstyled">
                <li><a href="#dashboard"><i class="bi bi-grid"></i> Dashboard</a></li>
                <li class="active"><a href="@Url.Action("Index", "Clients")"><i class="bi bi-people"></i> Clients</a></li>
                <li><a href="#programLibrary"><i class="bi bi-folder"></i> Program Library</a></li>
                <li ><a href="@Url.Action("Index", "Exercises")"><i class="fa-solid fa-dumbbell"></i> Exercise Library</a></li>
                <li><a href="#chat"><i class="bi bi-chat-dots"></i> Chat</a></li>
                <li><a href="#grow"><i class="bi bi-bar-chart-line"></i> Grow</a></li>
                <li><a href="#settings"><i class="bi bi-gear"></i> Settings</a></li>
                <li><a href="#team"><i class="bi bi-people"></i> Team</a></li>
            </ul>

            <div class="sidebar-footer">
                <p>29 days left on your trial, upgrade to keep full access.</p>
                <button class="btn btn-primary">Upgrade Now</button>
                <div class="user-profile d-flex align-items-center">
                    <img src="path/to/profile.jpg" alt="User Profile" class="profile-img">
                    <span class="user-name">Omar</span>
                    <a href="#logout" class="logout-icon ms-auto"><i class="bi bi-box-arrow-right"></i></a>
                </div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="content p-4 flex-grow-1" style="margin-left: 250px;">
            <div id="main-content">
                @RenderBody()
            </div>
        </div>
    </div>



<!-- Bootstrap JavaScript Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#sidebarSearch').on('input', function () {
                const query = $(this).val().trim();

                if (query.length === 0) {
                    $('#searchResults').slideUp(); // Hide results if input is empty
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Search", "Clients")', // Update with the correct action route
                    type: 'GET',
                    data: { query: query },
                    success: function (result) {
                        if (result.length > 0) {
                            let resultsHtml = '';

                            result.forEach(item => {
                                if (item.type === 'client') {
                                    resultsHtml += `<p data-type="client" data-id="${item.id}" class="search-item">${item.name} (${item.email})</p>`;
                                } else if (item.type === 'program') {
                                    resultsHtml += `<p data-type="program" data-id="${item.id}" class="search-item">${item.title} - Program</p>`;
                                }
                            });

                            $('#searchResults').html(resultsHtml).slideDown();
                        } else {
                            $('#searchResults').html('<p class="no-results">You can only search on username, email, or program title</p>').slideDown();
                        }
                    },
                    error: function () {
                        console.error('Search request failed.');
                    }
                });
            });

            // Handle click on search result items
            $('#searchResults').on('click', '.search-item', function () {
                const itemType = $(this).data('type');
                const itemId = $(this).data('id');

                if (itemType === 'client') {
                    window.location.href = `/Clients/Profile/${itemId}`; // Redirect to client profile
                } else if (itemType === 'program') {
                    window.location.href = `/Programs/Edit/${itemId}`; // Redirect to program edit
                }
            });
        });
    </script>


</body>
</html>
