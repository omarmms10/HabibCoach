@model HabibCoach.Models.Exercise

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this exercise and its associated instructions?</h3>
<div>
    <h4>Exercise Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExerciseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExerciseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExerciseType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExerciseType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimaryMuscleGroup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimaryMuscleGroup)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OtherMuscles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OtherMuscles)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoAttachment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoAttachment)
        </dd>
    </dl>

    <!-- Instructions Section -->
    @if (Model.Instructions != null && Model.Instructions.Any())
    {
        <h4>Instructions</h4>
        <hr />
        <ul>
            @foreach (var instruction in Model.Instructions)
            {
                <li>@instruction.Content</li>
            }
        </ul>
    }
    else
    {
        <p>No instructions available for this exercise.</p>
    }

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExerciseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
